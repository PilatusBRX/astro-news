---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "@/consts";
import Search from "./Search.astro";
import { Icon } from "astro-icon/components";
---

<header>
  <nav>
    <a href="/" class="logo-site"><Icon name="language" size={48} color="slategrey" />Dialogando</a>    
    <ul class="internal-links">
      <li><HeaderLink href="/">Home</HeaderLink></li>
      <li><HeaderLink href="/categories/">Categorias</HeaderLink></li>
      <li><HeaderLink href="/tags/">Tags</HeaderLink></li>
    </ul>
    <button id="search-button" arial-label="Pesquisa do blog">
      <Icon name="ios-search" size={32} />
    </button>
  </nav>
</header>
<Search />
<style>
  .logo-site{
    display: flex;
    flex-direction: row;
    height: 100%;
    justify-content: center;
    align-items: center;
    gap: 12px;
    color: slategrey;
  }
  ul.internal-links {
    display: flex;
  }

  ul.internal-links li {
    list-style: none;
    color: inherit;
  }

  #search-button {
    border: none;
    background-color: transparent;
    position: relative;
    right: 10%;
    cursor: pointer;
  }

  header {
    margin: 0;
    padding: 0 1em;
    background: white;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
  }
  h2 {
    margin: 0;
    font-size: 1em;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  nav a {
    padding: 1em 0.5em;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }
  .social-links,
  .social-links a {
    display: flex;
  }
  @media (max-width: 720px) {
    .social-links {
      display: none;
    }
  }
</style>
